generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(MORADOR)
  morador   Morador?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Morador {
  id         Int           @id @default(autoincrement())
  userId     Int           @unique @map("user_id")
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  nome       String
  cpf        String        @unique
  nascimento DateTime?
  telefone   String
  bloco      String
  unidade    String
  tipoMoradia TipoMoradia  @default(PROPRIETARIO) @map("tipo_moradia")
  status     StatusMorador @default(PENDENTE)
  veiculos   Veiculo[]
  createdAt  DateTime      @default(now()) @map("created_at")
  updatedAt  DateTime      @updatedAt @map("updated_at")

  @@map("moradores")
}

model Veiculo {
  id        Int         @id @default(autoincrement())
  moradorId Int         @map("morador_id")
  morador   Morador     @relation(fields: [moradorId], references: [id], onDelete: Cascade)
  placa     String      @unique
  tipo      TipoVeiculo
  createdAt DateTime    @default(now()) @map("created_at")

  @@map("veiculos")
}

enum Role {
  ADMIN
  MORADOR
}

enum StatusMorador {
  ATIVO
  PENDENTE
  BLOQUEADO
}

enum TipoVeiculo {
  CARRO
  MOTO
}


enum TipoMoradia {
  PROPRIETARIO
  ALUGUEL
}
